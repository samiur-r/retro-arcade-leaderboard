generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GameStats {
  id         String   @id @default(uuid())
  gameId     String
  totalPlays Int      @default(0)
  bestScore  Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([gameId])
}
