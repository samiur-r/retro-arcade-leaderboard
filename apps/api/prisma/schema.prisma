generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  Score     Score[]
  Stats     Stats[]
}

model Score {
  id        String   @id @default(uuid())
  gameId    String
  score     Int
  createdAt DateTime @default(now())

  game Game @relation(fields: [gameId], references: [id])
}

model Stats {
  id        String   @id @default(uuid())
  gameId    String
  plays     Int      @default(0)
  bestScore Int      @default(0)
  createdAt DateTime @default(now())

  game Game @relation(fields: [gameId], references: [id])
}
